<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_fundname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="天弘基金天弘基金天弘基金天弘基金"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_money_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="金额"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fundname" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="购买金额500"
        android:textColor="#000000"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_value" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/tv_money"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_value"
        android:src="@drawable/ic_edit" />

    <TextView
        android:id="@+id/tv_income_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="今日预计收益"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_fundname"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintLeft_toRightOf="@+id/tv_money"/>

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="预计收益5"
        android:layout_marginLeft="@dimen/dp_70"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_value"
        app:layout_constraintLeft_toRightOf="@+id/tv_money"
        android:textColor="#000000"
        android:textSize="@dimen/sp_14" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_fund_worth"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fundpz"
            android:layout_gravity="right"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/holo_red_light"
            android:singleLine="true"
            android:text="0.00%"
            android:layout_height="wrap_content" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>